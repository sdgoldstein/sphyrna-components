{
  "name": "@sphyrna/uicomponents",
  "version": "0.0.9",
  "description": "Sphyrna Svelte Component Library",
  "type": "module",
  "svelte": "./build/dist/index.js",
  "types": "./build/dist/index.d.ts",
  "files": [
    "build/dist",
    "!build/dist/**/*.test.*",
    "!build/dist/**/*.spec.*"
  ],
  "exports": {
    ".": {
      "types": "./build/dist/index.d.ts",
      "svelte": "./build/dist/index.js"
    }
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package -i src/main -o build/dist && publint",
    "prepublishOnly": "npm run package",
    "test": "npm run test:integration && npm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "3.2.2",
    "@playwright/test": "1.48.2",
    "@sphyrna/tscore": "0.1.1",
    "@storybook/addon-essentials": "8.4.2",
    "@storybook/addon-interactions": "8.4.2",
    "@storybook/addon-links": "8.4.2",
    "@storybook/addon-svelte-csf": "4.1.7",
    "@storybook/blocks": "8.4.2",
    "@storybook/svelte": "8.4.2",
    "@storybook/sveltekit": "8.4.2",
    "@storybook/test": "8.4.2",
    "@sveltejs/adapter-auto": "3.3.1",
    "@sveltejs/kit": "2.8.0",
    "@sveltejs/package": "2.3.7",
    "@sveltejs/vite-plugin-svelte": "4.0.0",
    "@types/eslint": "9.6.1",
    "autoprefixer": "10.4.20",
    "eslint": "9.14.0",
    "eslint-plugin-storybook": "0.11.0",
    "eslint-plugin-svelte": "2.46.0",
    "globals": "15.12.0",
    "lucide-svelte": "0.456.0",
    "postcss": "8.4.47",
    "publint": "0.2.12",
    "storybook": "8.4.2",
    "svelte": "5.1.13",
    "svelte-check": "4.0.6",
    "tailwind-merge": "2.5.4",
    "tailwindcss": "3.4.14",
    "typescript": "5.6.3",
    "typescript-eslint": "8.13.0",
    "vite": "5.4.10",
    "vitest": "2.1.4",
    "zod": "3.23.8"
  },
  "dependencies": {
    "bits-ui": "0.21.16"
  },
  "overrides": {
    "svelte": "5.1.13",
    "@sveltejs/vite-plugin-svelte": "4.0.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended",
      "plugin:storybook/recommended"
    ]
  }
}