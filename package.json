{
  "name": "svelte-sphyrna-components",
  "version": "0.0.1",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package -i src/main -o build/dist && publint",
    "prepublishOnly": "npm run package",
    "test": "npm run test:integration && npm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "exports": {
    ".": {
      "types": "./build/dist/index.d.ts",
      "svelte": "./build/dist/index.js"
    }
  },
  "files": [
    "build/dist",
    "!build/dist/**/*.test.*",
    "!build/dist/**/*.spec.*"
  ],
  "devDependencies": {
    "@chromatic-com/storybook": "^1.6.1",
    "@playwright/test": "^1.28.1",
    "@storybook/addon-essentials": "^8.2.9",
    "@storybook/addon-interactions": "^8.2.9",
    "@storybook/addon-links": "^8.2.9",
    "@storybook/addon-svelte-csf": "5.0.0-next.1",
    "@storybook/blocks": "^8.2.9",
    "@storybook/svelte": "^8.2.9",
    "@storybook/sveltekit": "^8.2.9",
    "@storybook/test": "^8.2.9",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/eslint": "^9.6.0",
    "autoprefixer": "^10.4.20",
    "bits-ui": "^0.21.13",
    "eslint": "^9.0.0",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-plugin-svelte": "^2.36.0",
    "globals": "^15.0.0",
    "postcss": "^8.4.41",
    "publint": "^0.1.9",
    "storybook": "^8.2.9",
    "svelte": "5.0.0-next.233",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.0.11",
    "vitest": "^2.0.0"
  },
  "svelte": "./build/dist/index.js",
  "types": "./build/dist/index.d.ts",
  "type": "module",
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended",
      "plugin:storybook/recommended"
    ]
  }
}